SUBSYSTEM=="dvb", ACTION=="remove", ENV{DVB_DEVICE_TYPE}=="dvr", ENV{DVB_DEVICE_NUM}=="0", RUN+="/bin/sh -c 'DIR=/dev/dvb/adapter$$(($env{DVB_ADAPTER_NUM} + 8)); /usr/bin/fusermount -u -z -q $${DIR}; /bin/rmdir $${DIR} 2>/dev/null'"

