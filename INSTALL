####################################################################################################
# raid
####################################################################################################

# Hard Disk Array
umount /dev/md0
mdadm --stop /dev/md0

mdadm --zero-superblock /dev/disk/by-id/ata-WDC_WD30EZRX-00D8PB0_WD-WMC4N0637164
mdadm --zero-superblock /dev/disk/by-id/ata-WDC_WD30EZRX-00D8PB0_WD-WMC4N0640397
mdadm --zero-superblock /dev/disk/by-id/ata-WDC_WD30EZRX-00D8PB0_WD-WMC4N0680500

mdadm --create /dev/md0 --level=0 --raid-devices=3 -c 1024 \
/dev/disk/by-id/ata-WDC_WD30EZRX-00D8PB0_WD-WMC4N0637164 \
/dev/disk/by-id/ata-WDC_WD30EZRX-00D8PB0_WD-WMC4N0640397 \
/dev/disk/by-id/ata-WDC_WD30EZRX-00D8PB0_WD-WMC4N0680500

gdisk /dev/md0
partprobe /dev/md0

mkfs.ext4 \
-m 0 \
-b 4096 \
-E stride=256,stripe-width=768,lazy_itable_init=0,lazy_journal_init=0 \
-O extent,large_file,sparse_super \
/dev/md0

mount -o noatime,stripe=768 /dev/md0 /mnt/hd_array
mkdir /mnt/hd_array/ts_hd
chown mc:mc /mnt/hd_array/ts_hd
mkdir /mnt/hd_array/mp4_hd
chown mc:mc /mnt/hd_array/mp4_hd

mdadm --detail --scan >> /etc/mdadm/mdadm.conf
update-initramfs -u

