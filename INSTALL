####################################################################################################
# autologin
####################################################################################################

/etc/lightdm/lightdm.conf
autologin-user=mc
autologin-user-timeout=0

####################################################################################################
# raid
####################################################################################################

# Hard Disk Array
umount /dev/md0p1
mdadm --stop /dev/md0
mdadm --zero-superblock /dev/sdc1
mdadm --zero-superblock /dev/sdd1
mdadm --create /dev/md0 --level=0 --raid-devices=2 -c 10240 /dev/sdc1 /dev/sdd1

gdisk /dev/md0
partprobe /dev/md0

mkfs.ext4 \
-m 0 \
-b 4096 \
-E stride=2560,stripe-width=5120,lazy_itable_init=0,lazy_journal_init=0 \
-O extent,large_file,sparse_super \
/dev/md0p1


# SSD Array
umount /dev/md1p1
mdadm --stop /dev/md1
mdadm --zero-superblock /dev/sda2
mdadm --zero-superblock /dev/sdb2
mdadm --create /dev/md1 --level=0 --raid-devices=2 -c 512 /dev/sda2 /dev/sdb2

gdisk /dev/md1
partprobe /dev/md1

mkfs.ext4 \
-m 0 \
-b 4096 \
-E stride=128,stripe-width=256,lazy_itable_init=0,lazy_journal_init=0 \
-O extent,large_file,sparse_super \
/dev/md1p1

mdadm --detail --scan >> /etc/mdadm/mdadm.conf

update-initramfs -u

mount -o noatime,stripe=256 /dev/md1p1 /mnt/ssd_array
mkdir /mnt/ssd_array/video
chown mc:mc /mnt/ssd_array/video

mount -o noatime,stripe=5120 /dev/md0p1 /mnt/hd_array
mkdir /mnt/hd_array/ts_hd
chown mc:mc /mnt/hd_array/ts_hd

####################################################################################################
# mime type png
####################################################################################################

application -> setting -> mime type editor -> png -> PNGHandler

####################################################################################################
# wakeuptool
####################################################################################################

wakeup_time=$(awk 'BEGIN { print systime() + 120 }')
date
sleep 20
sudo /home/mc/xdg-user-dirs/media/ubin/wakeuptool -w -t $wakeup_time

