begin mplayer
    begin
        prog   = mplayer
        button = KEY_NUMERIC_4
        config = vo_fullscreen 0
    end
    begin
        prog   = mplayer
        button = KEY_NUMERIC_5
        config = vo_fullscreen 1
    end
    begin
        prog   = mplayer
        button = KEY_REWIND
        config = audio_delay -0.1 0
    end
    begin
        prog   = mplayer
        button = KEY_FASTFORWARD
        config = audio_delay 0.1 0
    end
    begin
        prog   = mplayer
        button = KEY_PREVIOUS
        config = seek_chapter -1
    end
    begin
        prog   = mplayer
        button = KEY_NEXT
        config = seek_chapter +1
    end
    begin
        prog   = mplayer
        button = KEY_UP
        config = seek +60
    end
    begin
        prog   = mplayer
        button = KEY_DOWN
        config = seek -50
    end
    begin
        prog   = mplayer
        button = KEY_RIGHT
        config = seek +20
    end
    begin
        prog   = mplayer
        button = KEY_LEFT
        config = seek -17
    end
    begin
        prog   = mplayer
        button = KEY_CHANNELUP
        config = seek +600
    end
    begin
        prog   = mplayer
        button = KEY_CHANNELDOWN
        config = seek -600
    end
    begin
        prog   = mplayer
        button = KEY_STOP
        config = get_time_length\nget_percent_pos\nstop
    end
    begin
        prog   = mplayer
        button = KEY_PAUSE
        config = pause
    end
    begin
        prog   = mplayer
        button = KEY_PLAY
        config = speed_set 1
    end
    begin
        prog   = mplayer
        button = KEY_MUTE
        config = mute
    end
    begin
        prog   = mplayer
        button = KEY_VOLUMEUP
        config = volume +1
        repeat = 1
    end
    begin
        prog   = mplayer
        button = KEY_VOLUMEDOWN
        config = volume -1
        repeat = 1
    end
    begin
        prog   = mplayer
        button = KEY_RECORD
        config = screenshot 1\nosd_show_property_text Screenshot 2000
    end
end mplayer

